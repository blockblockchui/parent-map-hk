# Data Pipeline Environment Variables
# Copy this file to .env and fill in your actual keys

# Google Sheets API
# 1. Go to https://console.cloud.google.com/
# 2. Create a project, enable Google Sheets API & Google Drive API
# 3. Create Service Account credentials
# 4. Download JSON key and save as credentials.json in pipeline/
GOOGLE_SHEETS_ID=your_google_sheet_id_here

# Optional: LLM APIs (for evidence analysis)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Optional: Search APIs
# BING_API_KEY=...
# GOOGLE_CUSTOM_SEARCH_API_KEY=...
# GOOGLE_CUSTOM_SEARCH_CX=...

# Pipeline Configuration
LOG_LEVEL=INFO
CACHE_TTL_HOURS=24
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=10
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Freshness Check Intervals (days)
RISK_TIER_HIGH_DAYS=7
RISK_TIER_MEDIUM_DAYS=14
RISK_TIER_LOW_DAYS=60
